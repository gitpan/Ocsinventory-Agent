# This is a wrapper script for Ocsinventory::Agent
# Thanks to it, $PATH is initialized even if it started as a cron task
args=$@
for arg in $args; do
    if [ "$arg" = "--devlib" ]; then
        devlib="-Ilib"
    fi
done
if [ -n "$devlib" ]; then
    echo "[info] --devlib are found, Developer mode enabled"
fi
exec perl $devlib  -MOcsinventory::Agent -e 'Ocsinventory::Agent::run();' -- $*
